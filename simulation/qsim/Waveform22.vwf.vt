module testes_vlg_vec_tst();
// constants                                           
// general purpose registers
reg clock;
reg rst;
// wires                                               
wire borrow;
wire carry;
wire negative;
wire overflow;
wire [7:0] pc;
wire [7:0] s;
wire zero;

wire sampler;                             

// assign statements (if any)                          
testes i1 (
// port map - connection between master ports and signals/registers   
	.borrow(borrow),
	.carry(carry),
	.clock(clock),
	.negative(negative),
	.overflow(overflow),
	.pc(pc),
	.rst(rst),
	.s(s),
	.zero(zero)
);

// clock
initial
begin
	clock = 1'b0;
	clock = #15000 1'b1;
	# 5000;
	repeat(98)
	begin
		clock = 1'b0;
		clock = #5000 1'b1;
		# 5000;
	end
end 

// rst
initial
begin
	rst = 1'b1;
	rst = #5000 1'b0;
end 

testes_vlg_sample_tst tb_sample (
	.clock(clock),
	.rst(rst),
	.sampler_tx(sampler)
);

testes_vlg_check_tst tb_out(
	.borrow(borrow),
	.carry(carry),
	.negative(negative),
	.overflow(overflow),
	.pc(pc),
	.s(s),
	.zero(zero),
	.sampler_rx(sampler)
);
endmodule

