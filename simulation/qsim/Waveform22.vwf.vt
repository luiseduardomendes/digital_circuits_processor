`timescale 1 ps/ 1 ps
module testes_vlg_sample_tst(
	clock,
	rst,
	sampler_tx
);
input  clock;
input  rst;
output sampler_tx;

reg sample;
time current_time;
always @(clock or rst)
                                                                                
begin                                                 
 if ($realtime > 0)                                   
 begin                                                
	if ($realtime == 0 || $realtime != current_time)  
	begin									          
		if (sample === 1'bx)                          
			sample = 0;                               
		else                                          
			sample = ~sample;                         
	end										          
	current_time = $realtime;					      
 end                                                  
end                                                   

assign sampler_tx = sample;
endmodule

